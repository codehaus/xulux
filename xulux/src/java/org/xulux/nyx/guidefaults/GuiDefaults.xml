<?xml version="1.0"?>
<!-- $Id: GuiDefaults.xml,v 1.14 2003-08-03 20:53:04 mvdb Exp $ -->
<!-- 
    Where no type is specified, it will default
    to defaultType.
-->
<guidefaults defaultType="swing">
  <parentWidgetHandler class="org.xulux.nyx.swing.util.SwingParentWidgetHandler"/>
  <nativeWidgetHandler class="org.xulux.nyx.swing.util.NativeWidgetHandler"/>
  <fieldEventHandler class="org.xulux.nyx.swing.listeners.PrePostFieldListener"/>
  <nyxToolkit class="org.xulux.nyx.swing.util.SwingToolkit"/>
  <widgets>
    <widget name="button" class="org.xulux.nyx.swing.widgets.Button"/>
    <widget name="combo"  class="org.xulux.nyx.swing.widgets.Combo"/>
    <widget name="combo" type="swt" class="org.xulux.nyx.swt.widgets.SWTCombo"/>
    <widget name="entry" class="org.xulux.nyx.swing.widgets.Entry"/>
    <widget name="checkbox" class="org.xulux.nyx.swing.widgets.CheckBox"/>
    <widget name="label" class="org.xulux.nyx.swing.widgets.Label"/>
    <widget name="panel" class="org.xulux.nyx.swing.widgets.Panel"/>
    <!-- a tab is the same as a panel, only different properties are
         used. The properties are however read by the tabpanel
         and not by panel itself
     -->
    <widget name="tab" class="org.xulux.nyx.swing.widgets.Panel"/>
    <widget name="tabpanel" class="org.xulux.nyx.swing.widgets.TabPanel"/>
    <widget name="window" class="org.xulux.nyx.swing.widgets.Window"/>
    <widget name="window" type="swt" class="org.xulux.nyx.swt.widgets.Window"/>
    <widget name="textarea" class="org.xulux.nyx.swing.widgets.TextArea"/>
    <widget name="table" class="org.xulux.nyx.swing.widgets.Table"/>
  </widgets>
</guidefaults>