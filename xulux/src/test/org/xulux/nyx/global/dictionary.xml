<?xml version="1.0"?>
<!-- $Id: dictionary.xml,v 1.7 2003-09-08 10:44:41 mvdb Exp $ -->
<dictionary>
   <converters>
     <converter>org.xulux.nyx.converters.DoubleConverter</converter>
     <converter>org.xulux.nyx.converters.IntegerConverter</converter>
   </converters>
   <prefix-mappings>
     <prefix name="Test">
       <!-- 
            if discovery is true, it will find the fields automatically
            and you don't have to specify them manually
        -->
       <bean discovery="true">org.xulux.nyx.global.DictionaryBean</bean>
     </prefix>
     <!--
     <prefix name="Contained">
       <bean discovery="true">org.xulux.nyx.global.DictionarySubBean</bean>
     </prefix>
     -->
     
     <!-- Manual field definitiation -->
     <prefix name="Manual">
       <bean>org.xulux.nyx.global.DictionaryBean</bean>
       <fields>
         <field name="name"/>
         <field name="street" alias="straat"/>
         <field name="city" alias="plaats"/>
       </fields>
     </prefix>
     
     <prefix name="pb">
       <bean>org.xulux.nyx.global.ParameteredBean</bean>
       <fields>
         <field name="value"/>
         <field name="anothervalue"/>
         <!-- 
            fp = FirstParameter
            sp = SecondParameter
            tp = ThirdParameter
         -->
         <field name="parameter" alias="fp">
           <parameter type="String" value="FIRST"/>
         </field>
         <field name="parameter" alias="sp">
           <parameter type="static" value="org.xulux.nyx.global.ParameterType.SECOND"/>
	     </field>           
         <field name="parameter" alias="tp">
           <parameter type="static" value="org.xulux.nyx.global.ParameterType.THIRD"/>
         </field>
       </fields>
     </prefix>
     
     <!-- The double parameter test -->
     <prefix name="db">
       <bean>org.xulux.nyx.global.ParameteredBean</bean>
       <fields>
         <field name="double" alias="no1">
           <parameter type="static" value="org.xulux.nyx.global.ParameteredBean.NO1"/>
         </field>
         <field name="double" alias="no2">
           <parameter type="static" value="org.xulux.nyx.global.ParameteredBean.NO2"/>
	     </field>           
         <field name="double" alias="no3">
           <parameter type="static" value="org.xulux.nyx.global.ParameteredBean.NO3"/>
         </field>
       </fields>
     </prefix>

     <!-- The setmethod test -->
     <prefix name="set">
       <bean>org.xulux.nyx.global.ParameteredBean</bean>
       <fields>
         <field name="double" alias="no1">
           <parameter type="static" value="org.xulux.nyx.global.ParameteredBean.NO1"/>
           <setMethod name="setSomethingDifferent"/>
         </field>
         <field name="double" alias="no2">
           <parameter type="static" value="org.xulux.nyx.global.ParameteredBean.NO2"/>
           <setMethod name="setSomethingDifferent"/>
	     </field>           
         <field name="double" alias="no3">
           <parameter type="static" value="org.xulux.nyx.global.ParameteredBean.NO3"/>
           <setMethod name="setSomethingDifferent"/>
         </field>
       </fields>
     </prefix>
     
   </prefix-mappings>
</dictionary>