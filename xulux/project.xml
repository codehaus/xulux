  <repository>
    <connection>scm:cvs:pserver:anoncvs@codehaus.org:/cvsroot/xulux:nyx</connection>
    <url>http://cvs.codehaus.org/viewcvs.cgi/nyx/?cvsroot=xulux</url>
  </repository>

  <versions>
    <version>
      <id>dev</id>
      <name>dev</name>
      <tag>HEAD</tag>
    </version>
  </versions>

  <branches>
