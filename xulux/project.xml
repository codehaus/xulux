  <!-- Need to mark these as compile-time/run-time -->
  <dependencies>
    <dependency>
      <id>crimson</id>
      <version>1.1.3</version>
      <url>http://xml.apache.org</url>
    </dependency>
    
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
    </dependency>
    
    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/logging.html</url>
    </dependency>
    
    <dependency>
      <id>commons-lang</id>
      <version>2.0</version>
      <url>http://jakarta.apache.org/commons/lang.html</url>
    </dependency>
    
    <dependency>
      <id>swt</id>
      <version>win32-2.1.0</version>
      <url>http://www.eclipse.org</url>
    </dependency>
    
    <!-- 
         this jimi dependency is not needed, however nyx will not 
         support windows ico files or unix xpm files if jimi
         isn't in the classpath (that is for swing support, swt supports
         this!)
    -->
    <dependency>
      <id>jimi</id>
      <version>1.0</version>
      <url>http://java.sun.com/products/jimi/</url>
    </dependency>
    
    <!--
       Only needed if you want to use the DOM4j contenthandler
    -->
    <dependency>
      <id>dom4j</id>
      <version>1.4</version>
      <url>http://www.dom4j.org</url>
    </dependency>
    
  </dependencies>


  <build>

    <nagEmailAddress>xulux-interest@lists.codehaus.org</nagEmailAddress>

