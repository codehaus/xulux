  </organization>
  <inceptionYear>2002</inceptionYear>
  <package>org.xulux.nyx</package>
  
  <!-- Gump integration -->
  <gumpRepositoryId>nyx</gumpRepositoryId>

  <description>
    NYX is gui layer independend framework, driven by rules and data provided
    by the user
  </description>

  <shortDescription>NYX data driven gui's</shortDescription>

  <url>http://nyx.xulux.org/</url>
  <issueTrackingUrl>http://jira.codehaus.org</issueTrackingUrl>
  <siteAddress>codehaus.org</siteAddress>
