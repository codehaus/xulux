<?xml version="1.0" encoding="ISO-8859-1"?>
<project>

  <pomVersion>3</pomVersion>
  <id>xulux</id>
  <name>xulux</name>
  <currentVersion>1.0</currentVersion>
  <organization>
    <name>xulux.org</name>
    <url>http://www.xulux.org/</url>
    <logo>http://www.xulux.org/images/xulux.gif</logo>
  </organization>
  <inceptionYear>2002</inceptionYear>
  <package>org.xulux</package>
  
  <!-- Gump integration -->
  <gumpRepositoryId>xulux</gumpRepositoryId>

  <description>
    XULUX is gui layer independend framework, driven by rules and data provided
    by the user
  </description>

  <shortDescription>Xulux Gui Independend Framework</shortDescription>

  <url>http://nyx.xulux.org/</url>
  <issueTrackingUrl>http://jira.codehaus.org</issueTrackingUrl>
  <siteAddress>codehaus.org</siteAddress>
  <siteDirectory>/home/projects/xulux/public_html/</siteDirectory>
  <distributionDirectory>/home/projects/xulux/dist/</distributionDirectory>

  <repository>
    <connection>scm:cvs:pserver:anoncvs@codehaus.org:/home/projects/scm/xulux:xulux</connection>
    <url>http://cvs.xulux.org</url>
  </repository>

  <versions>
    <version>
      <id>dev</id>
      <name>dev</name>
      <tag>HEAD</tag>
    </version>
  </versions>

  <branches>
  </branches>

  <mailingLists>
    <mailingList>
      <name>XULUX User list</name>
      <archive>http://archive.xulux.org/user</archive>
      <subscribe>user-subsribe@xulux.org</subscribe>
      <unsubscribe>user-unsubscribe@xulux.org</unsubscribe>
    </mailingList>
    <mailingList>
      <name>XULUX dev list</name>
      <archive>http://archive.xulux.org/dev</archive>
      <subscribe>dev-subsribe@xulux.org</subscribe>
      <unsubscribe>dev-unsubscribe@xulux.org</unsubscribe>
    </mailingList>
    <mailingList>
      <name>XULUX scm list</name>
      <archive>http://archive.xulux.org/scm</archive>
      <subscribe>scm-subscribe@xulux.org</subscribe>
      <unsubscribe>scm-unsubscribe@xulux.org</unsubscribe>
    </mailingList>
    <mailingList>
      <name>XULUX announcement list</name>
      <archive>http://archive.xulux.org/announce</archive>
      <subscribe>announce-subscribe@xulux.org</subscribe>
      <unsubscribe>announce-unsubscribe@xulux.org</unsubscribe>
    </mailingList>
  </mailingLists>

  <developers>

    <developer>
      <name>Martin van den Bemt</name>
      <id>mvdb</id>
      <email>martin@mvdb.net</email>
      <organization>mvdb.com</organization>
      <roles>
        <role>Founder</role>
        <role>Architect</role>
        <role>Idiot</role>
      </roles>
    </developer>
  </developers>

 <contributors>
    <contributor>
      <name>Erik Fransen</name>
      <email>erik@mvdb.net</email>
      <organization>mvdb.com</organization>
      <roles>
        <role>Logo Designer</role>
      </roles>
    </contributor>
  </contributors>

  <!-- Need to mark these as compile-time/run-time -->
  <dependencies>
    <dependency>
      <id>crimson</id>
      <version>1.1.3</version>
      <url>http://xml.apache.org</url>
    </dependency>
    
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
    </dependency>
    
    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/logging.html</url>
    </dependency>
    
    <dependency>
      <id>swt</id>
      <version>win32-2.1.0</version>
      <url>http://www.eclipse.org</url>
    </dependency>
    
    <!-- 
         this jimi dependency is not needed, however nyx will not 
         support windows ico files or unix xpm files if jimi
         isn't in the classpath (that is for swing support, swt supports
         this!)
    -->
    <dependency>
      <id>jimi</id>
      <version>1.0</version>
      <url>http://java.sun.com/products/jimi/</url>
    </dependency>
    
    <!--
       Only needed if you want to use the DOM4j contenthandler
    -->
    <dependency>
      <id>dom4j</id>
      <version>1.4</version>
      <url>http://www.dom4j.org</url>
    </dependency>
    
  </dependencies>

  <build>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <!-- Unit test cases -->
    <unitTest>
      <directory>src/test</directory>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
         <resource>
           <directory>src/test</directory>
           <includes>
             <include>**/*.properties</include>
             <include>**/*.xml</include>
             <include>**/*.gif</include>
             <include>**/*.ico</include>
           </includes>
         </resource>
      </resources>
    </unitTest>

    <nagEmailAddress>dev@xulux.org</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <resources>
       <resource>
        <directory>src/java</directory>
         <includes>
           <include>**/*.properties</include>
           <include>**/*.xml</include>
         </includes>
       </resource>
    </resources>
    <jars>
    </jars>
  </build>

  <reports>
    <report>maven-jdepend-plugin</report>
    <report>maven-checkstyle-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-changelog-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-junit-report-plugin</report>
    <report>maven-tasklist-plugin</report>
    <report>maven-pmd-plugin</report>
    <report>maven-simian-plugin</report>
    <report>maven-faq-plugin</report>
    <report>maven-clover-plugin</report>
    <report>maven-jcoverage-plugin</report>
  </reports>

</project>

